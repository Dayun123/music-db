<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Search results for '<%= @search_param %>'</h1>

      <h2>Artists</h2>
      <ul>
        <% @artists.each do |artist| %>
          <li><%= link_to artist.name, artist_path(artist.id) %></li>
        <% end %>
      </ul>

      <h2>Songs</h2>
      <ul>
        <% @songs.each do |song| %>
          <li><%= link_to song.name, song_path(song.id) %></li>
        <% end %>
      </ul>

      <h2>Genres</h2>
      <ul>
        <% @genres.each do |genre| %>
          <li><%= link_to genre.name, genre_path(genre.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>