<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @song.name %>
    </p>

    <p>
      <strong>Artist:</strong>
      <%= @song.artist.try(:name) %>
    </p>

    <p><span class="glyphicon glyphicon-play glyphicon-big"></span></p>

    <%= link_to 'Edit', edit_song_path(@song), class: "btn btn-default" %>
    <%= link_to 'Back', songs_path, class: "btn btn-default" %>
  </div>
</div>