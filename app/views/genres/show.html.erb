<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p id="notice"><%= notice %></p>

    <h3>Artists in <%= @genre.name %> Genre</h3>

    <ul>
      <% @genre.artists.order(:name).each do |artist| %>
        <li style="list-style-type: none;"><%= link_to artist.name, artist_path(artist.id) %></li>
      <% end %>
    </ul>

    <%= link_to 'Back', genres_path, class: "btn btn-sm btn-success" %>
    <%= link_to 'Edit', edit_genre_path(@genre), class: "btn btn-sm btn-primary" %>

  </div>
</div>
